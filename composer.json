{
    "name": "atelierspierrot/reflectors",
    "type": "library",
    "description": "Some PHP Reflection objects",
    "keywords": [ "library", "reflector" ],
    "homepage": "http://github.com/atelierspierrot/reflectors",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "homepage": "http://e-piwi.fr/"
    }],
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "sami/sami": "@stable",
        "phpunit/phpunit": "@stable",
        "fabpot/php-cs-fixer": "@stable",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": { "psr-4": {  "Reflectors\\": "src/Reflectors/" } },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "build-doc": "php vendor/bin/sami.php update .sami.php",
        "update-doc": "php vendor/bin/sami.php update .sami.php",
        "cs-fixer": "php vendor/bin/php-cs-fixer fix -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
